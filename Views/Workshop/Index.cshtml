
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <title>Workshop – MTA-India</title>
    <link rel="stylesheet"href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        <style >
        /*WORKSHOP PAGE start*/
        .wp_regs {
            position: absolute;
            /*left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);*/
        }

        .wp_regs .mb-3 {
            margin-bottom: 2rem;
        }

        .wp_regs .workshop_form {
            background-color: #ffffff !important;
            padding: 20px 20px;
            border-radius: 6px;
            box-shadow: 0 0 3px rgba(0, 0, 0, .2);
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 65%;
        }

            .wp_regs .workshop_form select option {
                border: 1px solid red;
                outline: none;
            }

            .wp_regs .workshop_form .form-label {
                font-weight: normal;
                margin-bottom: 1.1rem;
            }

        .required {
            color: orangered;
        }

        .errorMsg {
            display: none;
        }
        /*WORKSHOP PAGE CLOSE*/
    </style>
   
</head>
<body>
    <div class="container wp_regs">
        <form action="" class="workshop_form" id="workshop_form">
            <div class=" text title" style="font-size:24px; margin-bottom:10px"><strong>Workshop Registration</strong></div>
            <div class="row">
                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Full Name<span class="required">*</span></label>
                    <input type="text" class="form-control" id="txtFullName" minlength="3" required />
                    <span class="errorMsg">Please, Enter Your Full Name</span>
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Select Location<span class="required">*</span></label>
                    <select class="form-select form-control" id="ddLocation" aria-label="Default select example">
                        <option value="0" selected>Please Select Location</option>
                        <option value="Noida">Noida</option>

                    </select>
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Select Technology<span class="required">*</span></label>
                    <select class="form-select form-control" id="ddTechnology" aria-label="Default select example">
                        <option value="0" selected>Please Select Technology</option>
                        
                    </select>
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Email ID<span class="required">*</span></label>
                    <input type="email" class="form-control" id="txtEmailID" />
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Contact no<span class="required">*</span></label>
                    <input type="tel" class="form-control" id="txtContactNo" />
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Select Course<span class="required">*</span></label>
                    <select class="form-select form-control" id="ddCourse" aria-label="Default select example">
                        <option value="0" selected>Please Select Course</option>
                        <option value="Dot NET">Dot NET</option>
                        <option value="Java">JaVa</option>

                    </select>
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Branch<span class="required">*</span></label>
                    <select class="form-select form-control" id="ddBranch" aria-label="Default select example">
                        <option value="0" selected>-Please Select Branch-</option>
                        <option value="BAC">BAC</option>
                        <option value="MAC" selected>MAC</option>
                        <option value="Btech" selected>Btech</option>

                    </select>
                </div>

                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">Semester<span class="required">*</span></label>
                    <select class="form-select form-control" id="ddSemester" aria-label="Default select example">
                        <option value="0" selected>Please Select Semester</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                </div>



                <div class="mb-3 col-md-4 col-sm-12 col-xs-12">
                    <label class="form-label control-label">College<span class="required">*</span></label>
                    <input type="text" class="form-select form-control" id="txtCollege" aria-label="Default select example" />


                </div>

            </div>
            <div style="margin-top:1rem">
                <button type="button" class="btn btn-primary" id="ws_sub" onclick="AddStudents()">SUBMIT</button>

            </div>


        </form>
    </div>

    <script src="~/Scripts/Workshop/Workshop.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
</body>
</html>

